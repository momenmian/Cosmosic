<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:layout_centerInParent="true"
    tools:context=".EarthObservation">

    <Button
        android:id="@+id/activeFireButtonId"
        android:text="Active Fire"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:background="#00000000"
        android:layout_marginLeft="90dp"
        />

    <Button
        android:id="@+id/coarbonMonoxideButtonId"
        android:text="Carbon Monoxide"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:background="#00000000"
        android:layout_marginLeft="90dp"
        />

    <Button
        android:id="@+id/globalTemperatureAnomalyButtonId"
        android:text="Global Temperature Anomaly"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:background="#00000000"
        android:layout_marginLeft="90dp"
        />

    <Button
        android:id="@+id/netRadiationButtonId"
        android:text="Net Radiation"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:background="#00000000"
        android:layout_marginLeft="90dp"
        />

    <Button
        android:id="@+id/rainFallButtonId"
        android:text="Rainfall"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:background="#00000000"
        android:layout_marginLeft="90dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/earth_observation" />

</FrameLayout>