<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mars"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <Button
        android:id="@+id/mars_twoButtonID"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:drawableTop="@drawable/mars_two"
        />

    <Button
        android:id="@+id/mars_threeButtonID"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:drawableTop="@drawable/mars_three"
        />

    <Button
        android:id="@+id/mars_fourButtonID"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:drawableTop="@drawable/mars_4"
        />

    </LinearLayout>
</ScrollView>


</LinearLayout>