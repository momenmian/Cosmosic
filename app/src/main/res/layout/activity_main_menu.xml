<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="3"
    android:background="#FFC107">

    <LinearLayout
    android:gravity="center"
    android:clipToPadding="false"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp">

    <androidx.cardview.widget.CardView
        android:foreground="?android:selectableItemBackground"
        android:id="@+id/earthobservationCardViewID"
        android:clickable="true"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:background="@drawable/greenbackground"
                android:src="@drawable/earth_obseervation_icon"
                android:padding="10dp"
                android:layout_width="64dp"
                android:layout_height="64dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Earth Observation Data"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceLarge"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:foreground="?android:selectableItemBackground"
        android:id="@+id/homecityCardViewID"
        android:clickable="true"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:background="@drawable/color1background"
                android:src="@drawable/home_city_icon"
                android:padding="10dp"
                android:layout_width="64dp"
                android:layout_height="64dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Home and City"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceLarge"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.cardview.widget.CardView
            android:foreground="?android:selectableItemBackground"
            android:id="@+id/marsCardViewID"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:background="@drawable/bluebackground"
                    android:src="@drawable/mars_icon"
                    android:padding="10dp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="MARS"
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceLarge"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:foreground="?android:selectableItemBackground"
            android:id="@+id/fireCardViewID"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:background="@drawable/color2background"
                    android:src="@drawable/fire_map_icon"
                    android:padding="10dp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Fire Map"
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceLarge"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.cardview.widget.CardView
            android:foreground="?android:selectableItemBackground"
            android:id="@+id/spacecraftCardViewID"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:background="@drawable/color3background"
                    android:src="@drawable/space_craft_icon"
                    android:padding="10dp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Space Craft"
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceLarge"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:foreground="?android:selectableItemBackground"
            android:id="@+id/missionCardViewID"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:background="@drawable/brownbackground"
                    android:src="@drawable/mission_icon"
                    android:padding="10dp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Mission"
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceLarge"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    </LinearLayout>